<div>
  <div>
    <h3>List of Correlations</h3>
  </div>
</div>

<hr>

<div>
  <div>

<div class="row">
  <div class="col-6">
    <table class="table table-hover">
      <thead>
        <tr class="table" style = "background-color: #5445FF">
          <th>Name</th>
          <th>Details</th>
          <th>Delete</th>
        </tr>
      <tbody>
      <% @list_of_correlations.each do |a_correlation| %>
      <tr class="table">
        <th><%= a_correlation.name %></th>
        <td> <a  href="/correlations/<%= a_correlation.id %>">Show Details</a> </td>
        <td> <a  class="text-danger" href="/delete_correlation/<%= a_correlation.id %>">Delete</a>   </td>
      </tr>
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div delete_correlation>
        <h5 class="modal-title" id="exampleModalLabel">Warning!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-info" data-dismiss="modal">No</button>
        <button type="button" class="btn btn-danger"><a class="text-white" href="/delete_correlation/<%= a_correlation.id %>">Yes, delete </a> </button>
      </div>
    </div>
  </div>
</div>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<hr>
<h4> Add a new Correlation Table</h4>
    <form action="/insert_correlation" method="post">
      <div class="form-group">
        <label for="name_box">Name</label>
        <input type="text" id="name_box" name="query_name">
      </div>
      <input type="submit" class="btn btn-success" value = "Create Correlation">
    </form>
  </div>
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header bg-warning text-white">
        <h5 class="modal-title" id="exampleModalLabel">Warning!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-info" data-dismiss="modal">No</button>
        <button type="button" class="btn btn-danger">Yes, delete</button>
      </div>
    </div>
  </div>
</div>