<div>
  <div>
    <h1>
      Correlation #<%= @the_correlation.id %> details
    </h1>

    <div>
      <div>
        <a href="/correlations">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_correlation/<%= @the_correlation.id %>">
          Delete correlation
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_correlation.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_correlation.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_correlation.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit correlation
    </h2>

    <form action="/modify_correlation/<%= @the_correlation.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_correlation.name %>">
      </div>

      <button>
        Update correlation
      </button>
    </form>
  </div>
</div>

<hr>
