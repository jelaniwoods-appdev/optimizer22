<div>
  <div>
    <h1>
      Asset class #<%= @the_asset_class.id %> details
    </h1>

    <div>
      <div>
        <a href="/asset_classes">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_asset_class/<%= @the_asset_class.id %>">
          Delete asset class
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_asset_class.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_asset_class.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_asset_class.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit asset class
    </h2>

    <form action="/modify_asset_class/<%= @the_asset_class.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_asset_class.name %>">
      </div>

      <button>
        Update asset class
      </button>
    </form>
  </div>
</div>

<hr>
