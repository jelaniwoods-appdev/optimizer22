<div>
  <div>
    <h1>
      List of all asset classes
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new asset class
    </h2>

    <form action="/insert_asset_class" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Create asset class
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_asset_classes.each do |an_asset_class| %>
      <tr>
        <td>
          <%= an_asset_class.id %>
        </td>

        <td>
          <%= an_asset_class.name %>
        </td>

        <td>
          <%= time_ago_in_words(an_asset_class.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_asset_class.updated_at) %> ago
        </td>

        <td>
          <a href="/asset_classes/<%= an_asset_class.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
