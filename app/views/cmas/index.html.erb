<div>
  <div>
    <h1>
      List of all cmas
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new cma
    </h2>

    <form action="/insert_cma" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Create cma
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_cmas.each do |a_cma| %>
      <tr>
        <td>
          <%= a_cma.id %>
        </td>

        <td>
          <%= a_cma.name %>
        </td>

        <td>
          <%= time_ago_in_words(a_cma.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_cma.updated_at) %> ago
        </td>

        <td>
          <a href="/cmas/<%= a_cma.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
